<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
android:background="@color/colorb"
    android:layout_height="match_parent"
    tools:context=".Facturas">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout

        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/titback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/tit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Estilo1"

        android:text="Facturas de proveedores pendientes de autorizar"
        />
            </LinearLayout>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

<LinearLayout
    android:layout_width="1500dp"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/table"
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*"
    >

        <TableRow
            android:layout_width="2000000dp"
            android:background="@color/azul"
            android:layout_height="wrap_content">

            <TextView
                android:text=" (ID)Factura "
                style="@style/Estilo3"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                />
            <TextView
                android:text=" Folio "
                style="@style/Estilo3"
                android:layout_weight="3"
                android:layout_width="match_parent"

                android:layout_gravity="center"
                />
            <TextView
                android:text=" Fecha "
                style="@style/Estilo3"
android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                />
            <TextView
                android:text=" Proveedor "
                style="@style/Estilo3"
android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                />
            <TextView
                android:text=" Importe total "
                style="@style/Estilo3"
android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                />
            <TextView
                android:text=" Opciones  "
                style="@style/Estilo3"
                android:layout_width="match_parent"
android:layout_weight="10"
                android:layout_gravity="center"
                />
        </TableRow>


    </TableLayout>
</LinearLayout>
</HorizontalScrollView>
            </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000000"
        android:choiceMode="singleChoice"
        android:divider="#81888b"
        android:dividerHeight="2dp" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>